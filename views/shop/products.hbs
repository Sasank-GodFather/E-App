{{# each products}}
    <div class="row">
        {{#each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="img-responsive" src="{{this.url}}" alt="{{this.item}}">
                    <div class="caption">
                        <h3>{{this.item}}</h3>
                        <p>{{this.description}}</p>
                        <p><a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-success" role="button">Add To Cart</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                        <p>Price: {{this.price}}</p>
                    </div>
                </div>
            </div>
        {{/each}}   
    </div>
{{/each}}

