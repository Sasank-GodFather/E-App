<div class="row">
    <div class="col-sm-6 col-md-4 col -md-offset-4 col-sm-offset-3">
        <h1 style="color:white;">Track Your Order</h1>
        <h4 style="color:white;">Enter your details</h4>
        
        {{#if noUser }}
        <div class="alert alert-danger">
            User doesn't exist! You don't have any orders.<a href='/'>Make your first order</a>
        </div>
        {{/if}}
        {{#if yesUser }}
        <div class="alert alert-success {{#if yesUser}}hidden{{/if}}">
            User exists!
        </div>
        {{/if}}
        <form action="/track-order" method="post">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="form-control" name="name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="phone-number">Contact Number</label>
                        <input type="text" id="phone-number" name="phonenumber" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12" style="align: center;">
                    <button type="submit" class="btn btn-success">Track</button>
                </div>
            </div>
        </form>
    </div>
</div>